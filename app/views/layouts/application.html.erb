<!DOCTYPE html>
<html>
  <head>
    <title>Confianscore</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light">
      <%= link_to "Confianscore", root_path(), class: "navbar-brand"  %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>

        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to "Inspecter des sources", sources_path(), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "CrÃ©er une fiche", new_person_path(), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Charte", charte_path(), class: "nav-link" %>
          </li>
        </ul>

      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
