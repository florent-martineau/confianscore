<%= form_with(model: source, local: true) do |form| %>
  <% if source.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(source.errors.count, "error") %> prohibited this source from being saved:</h2>

      <ul>
        <% source.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_area :abstract, :placeholder => "Qu'a dit cette personne ?", :required => true, :id => "text-source" %>
  </div>

  <div class="field">
    <%= form.text_field :link, :placeholder => "Lien vers la source", :required => true, :id => "link-source" %>
  </div>

  <div class="field" hidden>
    <%= form.label :person_id %>
    <%= form.number_field :person_id %>
  </div>

  <div class="actions">
    <%= form.submit "Ajouter une source" %>
  </div>
<% end %>
