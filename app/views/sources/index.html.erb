<p id="notice"><%= notice %></p>

<h1>Sources</h1>

<table>
  <thead>
    <tr>
      <th>Abstract</th>
      <th>Link</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sources.each do |source| %>
      <tr>
        <td><%= source.abstract %></td>
        <td><%= source.link %></td>
        <td><%= source.person_id %></td>
        <td><%= link_to 'Voter', new_vote_path({:source_id => source.id}) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
